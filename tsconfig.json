{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "strictNullChecks": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "include": [
    "src/**/*"
  ]
}